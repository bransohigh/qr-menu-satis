# Application
PORT=3000
NODE_ENV=development

# Database – replace with your PostgreSQL connection string
DATABASE_URL="postgresql://postgres:password@localhost:5432/qrmenu?schema=public"

# JWT secret – use a long random string in production
JWT_SECRET="changeme_use_a_long_random_secret_here"

# Public base URL (used for QR code links)
PUBLIC_URL="http://localhost:3000"

# Payment provider: fakepay (dev/demo) | stripe | iyzico
PAYMENT_PROVIDER=fakepay

