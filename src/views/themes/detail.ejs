  <script>
    async function handleBuy(themeId) {
      try {
        const res = await fetch('/api/checkout', {
          method: 'POST',
          headers: { 'Content-Type': 'application/json' },
          body: JSON.stringify({ themeId }),
          credentials: 'include',
        });

        if (res.status === 401) {
          sessionStorage.setItem('pendingThemeId', themeId);
          document.getElementById('auth-modal').classList.remove('hidden');
          return;
        }

        const data = await res.json();
        if (data.redirect) {
          window.location.href = data.redirect;
          return;
        }
        if (data.redirectUrl) {
          window.location.href = data.redirectUrl;
          return;
        }
        alert(data.error || 'Bir hata oluÅŸtu.');
      } catch (err) {
        alert('BaÄŸlantÄ± hatasÄ±. LÃ¼tfen tekrar deneyin.');
      }
    }

    // Auto-trigger buy if user just logged in with a pending theme
    document.addEventListener('DOMContentLoaded', () => {
      const pending = sessionStorage.getItem('pendingThemeId');
      if (pending && pending === '<%= theme.id %>') {
        sessionStorage.removeItem('pendingThemeId');
        <% if (user) { %>
        handleBuy('<%= theme.id %>');
        <% } %>
      }
    });
  </script>

